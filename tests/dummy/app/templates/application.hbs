<h2>Bindings</h2>
<pre>
\{{x-toggle value=boundValue offLabel="Hey:hey" onLabel="Ho:ho" onToggle=(mut boundValue)}}
</pre>
<div class="default-style text-labels">
	<table class="demo-table">
		<tr>
			<td>
				<div class="default-theme">
					{{x-toggle
            offLabel='Hey:hey'
            onLabel='Ho:ho'
            showLabels=true
            value=boundValue
            onToggle=(mut boundValue)
          }}
				</div>
			</td>

			<td>
				value: {{input value=boundValue}}
			</td>
		</tr>
		<tr>
			<td>
				<div class="default-theme">
					{{x-toggle
            offLabel='Hey:hey'
            onLabel='Ho:ho'
            showLabels=true
            value=bV2
            onToggle=(mut bV2)
          }}
				</div>
			</td>
			<td>
				value: {{bV2}}
			</td>
		</tr>
	</table>
</div>

