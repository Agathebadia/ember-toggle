<h1 id='title'>ember-cli-toggle</h1>

<h2>Themes</h2>

<table>
  <tr>
    <td>{{x-toggle name=2 theme='default'}}</td>
    <td>default</td>
    <td>{{x-toggle name=3 theme='light' }}</td>
    <td>light</td>
  </tr>
  <tr>
    <td>{{x-toggle name=4 theme='ios' }}</td>
    <td>ios</td>
    <td>{{x-toggle name=5 theme='flat' }}</td>
    <td>flat</td>
  </tr>
  <tr>
    <td>{{x-toggle name=6 theme='flip' offLabel='Nope' onLabel='Yep'}}</td>
    <td>flip</td>
    <td>{{x-toggle name=7 theme='skewed'}}</td>
    <td>skewed</td>
  </tr>
</table>

