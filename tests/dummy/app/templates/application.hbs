<h1 id='title'>ember-cli-toggle</h1>

<h2>Themes</h2>

<table>
  <tr>
    <td>{{x-toggle
      name=1
      theme='default'
      value=v1
      onToggle=(mut v1)
    }}</td>
    <td>default</td>
    <td>{{x-toggle name=2 theme='light' value=v2 onToggle=(action 'clicked' 'v2') }}</td>
    <td>light</td>
  </tr>
  <tr>
    <td>
      {{x-toggle
        name=3
        theme='ios'
        value=v3
        onValue='Foo:foo'
        offValue='Bar:bar'
        onToggle=(mut v3)
      }}
    </td>
    <td>ios</td>
    <td>{{x-toggle name=4 theme='flat'  value=v4 onToggle=(mut v4)}}</td>
    <td>flat</td>
  </tr>
  <tr>
    <td>{{x-toggle name=5 theme='flip' offLabel='Nope' onLabel='Yep' value=v5 onToggle=(mut v5)}}</td>
    <td>flip</td>
    <td>{{x-toggle name=6 theme='skewed' value=v6 onToggle=(mut v6)}}</td>
    <td>skewed</td>
  </tr>
</table>

